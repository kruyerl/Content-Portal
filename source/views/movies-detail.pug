                  i.material-icons.md-22 movie_filter
                  h6.anchor Directors
                a.mdl-tabs__tab(href='#Writers-panel') 
                  i.material-icons.md-22 create
                  h6.anchor Writers
                a.mdl-tabs__tab.closetab.is-active(href='#close-panel') 
                  i.material-icons.md-22 expand_more
                  
                
                
