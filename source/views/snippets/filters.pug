        include ./card-filtercard-checkbox.pug
            
    #Rating-panel.mdl-tabs__panel.wrapper
      include ./filters-starrating.pug 
       
          
    #Date-panel.mdl-tabs__panel.wrapper
      
      include ./filters-year-range.pug 
      
        
        
        
